{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "ImageCard.tsx", "src/main.tsx", "styles.tsx", "vite-env.d.ts", "WhereToBuy.tsx", "Image.tsx", "Header.tsx", "HoverMenuButton.tsx", "Footer.tsx", "App.tsx", "ExploreIpad.tsx"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
